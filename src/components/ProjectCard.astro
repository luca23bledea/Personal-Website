---
const { title, tech, link, linkText = "View Project" } = Astro.props;
---

<div class="bg-gray-800 p-6 rounded shadow hover:shadow-lg transition">
  <h3 class="text-xl font-bold mb-2">{title}</h3>
  <p class="text-sm text-gray-400 mb-4">{tech}</p>
  <a href={link} target="_blank" class="text-blue-400 hover:underline">
    {linkText}
  </a>
</div>
